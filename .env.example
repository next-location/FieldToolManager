# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/field_tool_manager
DIRECT_URL=postgresql://postgres:postgres@localhost:54322/field_tool_manager

# ========================================
# Supabase Configuration
# ========================================
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ========================================
# Application Configuration
# ========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ========================================
# Authentication
# ========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-secret-key-at-least-32-characters

# ========================================
# Redis (Rate Limiting)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# Monitoring (Optional)
# ========================================
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# ========================================
# Feature Flags
# ========================================
NEXT_PUBLIC_ENABLE_CONTRACT=true
NEXT_PUBLIC_ENABLE_INVOICE=true
NEXT_PUBLIC_ENABLE_STRIPE=false

# ========================================
# Email Configuration
# ========================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@fieldtool.local

# ========================================
# Storage (Optional - for file uploads)
# ========================================
NEXT_PUBLIC_STORAGE_BUCKET=tool-images