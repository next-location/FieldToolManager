{
  "buildCommand": "rm -rf .next node_modules/.cache && next build",
  "crons": [
    {
      "path": "/api/cron/create-monthly-invoices",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/process-plan-changes",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/send-invoice-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/check-email-usage",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/apply-plan-changes",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/send-plan-change-notifications",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/auto-deactivate-users",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/cleanup-demos",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/backup",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/attendance/alerts/checkin-reminder",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/attendance/alerts/checkout-reminder",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/attendance/alerts/daily-report",
      "schedule": "0 11 * * *"
    }
  ],
  "redirects": [
    {
      "source": "/:path(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.zairoku.com"
        }
      ],
      "destination": "https://zairoku.com/:path*",
      "permanent": true
    }
  ]
}
